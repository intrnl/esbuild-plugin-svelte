{
	"name": "@intrnl/esbuild-plugin-svelte",
	"description": "Compile Svelte components with esbuild",
	"version": "0.1.3",
	"license": "MIT",
	"author": "intrnl",
	"repository": {
		"url": "https://github.com/intrnl/esbuild-plugin-svelte"
	},
	"main": "dist/esbuild-plugin-svelte.js",
	"module": "dist/esbuild-plugin-svelte.mjs",
	"types": "types/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/esbuild-plugin-svelte.js",
			"import": "./dist/esbuild-plugin-svelte.mjs"
		}
	},
	"files": [
		"dist/",
		"types/",
		"README.md"
	],
	"scripts": {
		"build": "pnpm run build:lib && pnpm run build:types",
		"build:lib": "node build.mjs",
		"build:types": "tsc",
		"prepare": "pnpm run build"
	},
	"peerDependencies": {
		"esbuild": "^0.8.28",
		"svelte": "^3.0.0"
	},
	"peerDependenciesMeta": {
		"esbuild": { "optional": false },
		"svelte": { "optional": false }
	},
	"devDependencies": {
		"@types/estree": "^0.0.45",
		"@types/node": "^14.14.17",
		"esbuild": "^0.8.28",
		"estree-walker": "^2.0.2",
		"magic-string": "^0.25.7",
		"svelte": "^3.31.0",
		"typescript": "^4.1.3"
	}
}
